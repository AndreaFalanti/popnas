{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "search_space": {
            "type": "object",
            "properties": {
                "blocks": {
                    "type": "integer",
                    "minimum": 1
                },
                "lookback_depth": {
                    "type": "integer",
                    "minimum": 1
                },
                "operators": {
                    "type": "array",
                    "items": {"type": "string"},
                    "minItems": 2
                }
            },
            "required": [
                "blocks",
                "lookback_depth",
                "operators"
            ]
        },
        "search_strategy": {
            "type": "object",
            "properties": {
                "max_children": {
                    "type": "integer",
                    "minimum": 1
                },
                "max_exploration_children": {
                    "type": "integer",
                    "minimum": 0
                },
                "score_metric": {
                    "type": "string",
                    "enum": [
                        "accuracy",
                        "f1_score",
                        "mean_iou"
                    ]
                },
                "additional_pareto_objectives": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "time",
                            "params"
                        ]
                    }
                }
            },
            "required": [
                "max_children",
                "max_exploration_children",
                "score_metric",
                "additional_pareto_objectives"
            ]
        },
        "training_hyperparameters": {
            "type": "object",
            "properties": {
                "epochs": {
                    "type": "integer",
                    "minimum": 1
                },
                "learning_rate": {
                    "type": "number",
                    "minimum": 0
                },
                "weight_reg": {
                    "type": "number",
                    "minimum": 0
                },
                "use_adamW": {
                    "type": "boolean"
                },
                "drop_path_prob": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "cosine_decay_restart": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "period_in_epochs": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "t_mul": {
                            "type": "number"
                        },
                        "m_mul": {
                            "type": "number"
                        },
                        "alpha": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "enabled",
                        "period_in_epochs",
                        "t_mul",
                        "m_mul",
                        "alpha"
                    ]
                },
                "softmax_dropout": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            },
            "required": [
                "epochs",
                "learning_rate",
                "weight_reg",
                "use_adamW",
                "drop_path_prob",
                "cosine_decay_restart",
                "softmax_dropout"
            ]
        },
        "architecture_hyperparameters": {
            "type": "object",
            "properties": {
                "filters": {
                    "type": "integer",
                    "minimum": 1
                },
                "motifs": {
                    "type": "integer",
                    "minimum": 2
                },
                "normal_cells_per_motif": {
                    "type": "integer",
                    "minimum": 1
                },
                "block_join_operator": {
                    "type": "string",
                    "enum": [
                        "add",
                        "avg"
                    ]
                },
                "lookback_reshape": {
                    "type": "boolean"
                },
                "concat_only_unused_blocks": {
                    "type": "boolean"
                },
                "residual_cells": {
                    "type": "boolean"
                },
                "se_cell_output": {
                    "type": "boolean"
                },
                "multi_output": {
                    "type": "boolean"
                }
            },
            "required": [
                "filters",
                "motifs",
                "normal_cells_per_motif",
                "block_join_operator",
                "lookback_reshape",
                "concat_only_unused_blocks",
                "residual_cells",
                "se_cell_output",
                "multi_output"
            ]
        },
        "dataset": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "image_classification",
                        "time_series_classification",
                        "image_segmentation"
                    ]
                },
                "name": {
                    "type": "string"
                },
                "path": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "classes_count": {
                    "type": "integer"
                },
                "ignore_class": {
                    "oneOf": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "batch_size": {
                    "type": "integer",
                    "minimum": 2
                },
                "inference_batch_size": {
                    "type": "integer",
                    "minimum": 2
                },
                "validation_size": {
                    "oneOf": [
                        {
                            "type": "number"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "cache": {
                    "type": "boolean"
                },
                "folds": {
                    "type": "integer",
                    "minimum": 1
                },
                "samples": {
                    "oneOf": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "balance_class_losses": {
                    "type": "boolean"
                },
                "resize": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                },
                                "width": {
                                    "type": "integer",
                                    "minimum": 8
                                },
                                "height": {
                                    "type": "integer",
                                    "minimum": 8
                                }
                            },
                            "required": [
                                "enabled",
                                "width",
                                "height"
                            ]
                        }
                    ]
                },
                "data_augmentation": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "use_cutout": {
                            "type": "boolean"
                        },
                        "perform_on_gpu": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "enabled",
                        "perform_on_gpu"
                    ]
                }
            },
            "required": [
                "type",
                "name",
                "path",
                "classes_count",
                "batch_size",
                "inference_batch_size",
                "validation_size",
                "cache",
                "folds",
                "samples",
                "balance_class_losses",
                "data_augmentation"
            ]
        },
        "others": {
            "type": "object",
            "properties": {
                "accuracy_predictor_ensemble_units": {
                    "type": "integer",
                    "minimum": 1
                },
                "predictions_batch_size": {
                    "type": "integer",
                    "minimum": 32
                },
                "save_children_weights": {
                    "type": "boolean"
                },
                "save_children_as_onnx": {
                    "type": "boolean"
                },
                "pnas_mode": {
                    "type": "boolean"
                },
                "train_strategy": {
                    "type": "string",
                    "enum": [
                        "CPU",
                        "GPU",
                        "TPU",
                        "multi-GPU"
                    ]
                },
                "enable_XLA_compilation": {
                    "type": "boolean"
                }
            },
            "required": [
                "accuracy_predictor_ensemble_units",
                "predictions_batch_size",
                "save_children_weights",
                "save_children_as_onnx",
                "pnas_mode",
                "train_strategy"
            ]
        }
    },
    "required": [
        "search_space",
        "search_strategy",
        "training_hyperparameters",
        "architecture_hyperparameters",
        "dataset",
        "others"
    ]
}