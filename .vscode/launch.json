    "version": "0.2.0",
    "configurations": [
        {
            "name": "POPNAS CPU",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}\\src",
            "args": [
                "-b",
                "5",
                "-k",
                "2",
                "-e",
                "1",
                "--cpu"
            ]
        },
        {
            "name": "POPNAS GPU",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}\\src",
            "args": [
                "-b",
                "5",
                "-k",
                "2",
                "-e",
                "1"
            ]
        },
        {
            "name": "Docker: Python - General",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "general"
            }
        }
    ]
}